    <!-- Bean 的构造方法的属性注入 -->
    <bean id="user" class="com.test.ioc.demo4.User">
        <constructor-arg name="name" value="张三" />
        <constructor-arg name="age" value="23" />
    </bean>

    <!-- Bean 的 set 方法的属性注入 -->
